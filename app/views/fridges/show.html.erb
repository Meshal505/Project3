<h1>Fridge show</h1>

<p>
    <%= @fridge.name %>
</p>


<p>items:</p>
<% @fridge.items.each do |item| %>
    <% item.options.each do |o|%>
    <li>
        <%= link_to o.name, fridge_item_path(item)%>
    </li>
        
    <% end %>
<% end %>


<p>
    <%= link_to 'Add item', new_fridge_item_path(@fridge) %>
</p>

<p>
    <%= link_to 'All Fridges', fridges_path %>
</p>

